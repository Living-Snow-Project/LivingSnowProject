{
  "expo": {
    "name": "Living Snow Project",
    "slug": "LivingSnowProject",
    "privacy": "unlisted",
    "primaryColor": "#000000",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/images/lsp@2x.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.kodnerlab.livingsnowproject",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow Living Snow Project to determine your location for easier snow algae reporting",
        "NSPhotoLibraryUsageDescription": "Allow Living Snow Project to access your photos and supplement snow algae reporting"
      }
    },
    "android": {
      "package": "com.kodnerlab.livingsnowproject",
      "versionCode": 3,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    }
  }
}
